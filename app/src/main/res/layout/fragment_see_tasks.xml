<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CreateProjectFragment">

    <Button
        android:id="@+id/back_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:text="@string/back_button_tasks"
        android:textColor="@color/colorWhite"
        android:textSize="26sp" />

    <TextView
        android:id="@+id/project_name_display"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/project_view"
        android:textSize="26sp"
        android:textAlignment="center"
        />

    <TextView
        android:id="@+id/project_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="36sp"
        />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:layout_margin="2sp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/start_date"
            android:textSize="26sp"
            android:padding="2dp"
            android:textAlignment="center"
            android:layout_weight="4"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/end_date"
            android:layout_weight="4"
            android:textSize="26sp"
            android:textAlignment="center"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:layout_margin="2sp">

        <TextView
            android:id="@+id/start_date_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="26sp"
            android:padding="2dp"
            android:textAlignment="center"
            android:layout_weight="4"
            />
        <TextView
            android:id="@+id/end_date_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:textSize="26sp"
            android:textAlignment="center"/>
    </LinearLayout>

        <EditText
            android:id="@+id/task_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/task_name"
            android:textAlignment="center"
            android:textSize="26sp"
            android:inputType="text"
            android:autofillHints="@string/task_name"
            android:layout_margin="2sp"
            />

    <Button
        android:id="@+id/insert_task_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2sp"
        android:background="@color/colorAccent"
        android:text="@string/insert_task"
        android:textAlignment="center"
        android:textColor="@color/colorWhite"
        android:textSize="26sp" />

    <ListView
        android:id="@+id/task_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>